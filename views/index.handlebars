<h1>Welcome To Burger Town!</h1>

<h2>Ramirez! Devour the Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}} 
          <button class="change-devour" data-id="{{id}}" data-newDevour="{{devoured}}">
            1 bite, 2 bite, 3 bite... last bite.
        </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger been Ate!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to be Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
